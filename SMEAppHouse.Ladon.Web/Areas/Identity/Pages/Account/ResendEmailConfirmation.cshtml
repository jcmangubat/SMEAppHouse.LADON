@page "/Account/ResendEmailConfirmation"
@{
    Layout = "~/Pages/Shared/_NoNavsLayout.cshtml";
}
@using SMEAppHouse.Ladon.Web.Areas.Identity.Pages.Account
@model ResendEmailConfirmationPageModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

@section Styles {

    <environment include="Development">
        <link href="~/css/user-auth.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/dist/user-auth.min.css" rel="stylesheet" />
    </environment>
}

<div class="user-auth-container">
    <div class="d-flex justify-content-center h-100">
        <div class="card" style="width: 440px;">
            <div class="card-header">
                <h3>@(ViewData["Title"])</h3>
            </div>
            <div class="card-body">
                <p id="external-login-description" class="text-info">
                    Please enter your email address used to sign-up here and we will send you the email for your to confirm your email address.
                </p>

                <form method="post" asp-page-handler="SendEmailConfirmation">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input id="email" name="email" type="text" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email address" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger email-validation"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Resend" class="btn float-right login_btn" />
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="links">
                    Already have an account?
                    <a id="sign-in" asp-page="./login">Sign In</a>
                </div>
                <div class="links">
                    Don't have an account?
                    <a id="sign-up" asp-page="./login">Sign Up</a>
                </div>
                <div class="links">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
            </div>
        </div>
    </div>
</div>

