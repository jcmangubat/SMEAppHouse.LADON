                                            <div class="lpa-title">
                                                <h5><a href="@($"/articles/{article.Slug}")">@article.Title</a></h5>
                                            </div>
                                            <div class="lpa-meta">
                                                <a class="name" href="#" )">
                                                    @article.AuthorName
                                                </a>
